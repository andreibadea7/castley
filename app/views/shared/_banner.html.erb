
<section class="Banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="Banner__inner container">
    <div class="Banner__content">
      <h1 class="Banner__heading text-white">This is a re**moat**ley brilliant app 🏰 </h1>
      <p class="Banner__leading text-white">Have a wild knight.</p>
      <%= form_tag('/castles', method: "get", class: "Banner__form") do %>
        <div class="input-group input-group-lg">
          <%= text_field_tag(:query, nil, placeholder: "Where do you want your event?", class: "Input Banner__input form-control") %>
          <div class="input-group-btn">
            <%= button_tag :submit, class: "btn btn-primary btn-lg" do %>
              <i class="fa fa-search" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
