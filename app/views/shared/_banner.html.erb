<section class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://www.nottinghamcastleproject.co.uk/wp-content/uploads/2018/05/castle-entrance.png');">
  <div class="banner__inner container">
    <div class="banner__content">
      <h1 class="banner__heading text-white">This is a re**moat**ley brilliant app 🏰 </h1>
      <p class="banner__leading text-white">Have a lovely knight.</p>
      <%= form_with url: castles_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Where would you like to stay?"
        %>
        <%= button_tag :submit, class: "btn btn-primary btn-lg" do %>
          <i class="fa fa-search" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
