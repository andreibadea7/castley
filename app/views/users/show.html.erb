<div style="display:flex">
  <div class="form-registration">

    <h1>User Profile</h1>

    <h3>User information</h3>
    <p>Title: <%= @user.title %></p>
    <p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
    <p>Email: <%= @user.email %></p>

    <h3>Upcoming reservations</h3>

    <% @my_reservations.each do |stay| %>
      <% if stay.check_out > Date.today %>
        <p>Place: <%= stay.castle[:name] %></p>
        <p>Length of stay: <%= stay.check_in.strftime('%d-%m-%Y') %> - <%= stay.check_out.strftime('%d-%m-%Y') %></p>
        <p>Total price: £<%= number_with_delimiter(stay.total_price) %></p>
      <% end %>
    <% end %>

  </div>

  <div class="form-registration">

    <h2>Previous stays</h2>


    <% @my_reservations.each do |stay| %>
      <% if stay.check_out < Date.today %>
       <p>Place: <%= stay.castle[:name] %></p>
       <p>Length of stay: <%= stay.check_in.strftime('%d-%m-%Y') %> - <%= stay.check_out.strftime('%d-%m-%Y') %></p>
       <p class="btn btn-primary btn-sm"><%= link_to "Leave a review", new_reservation_review_path(stay), class: "text-white text-decoration-none" %>
      <% end %>
    <% end %>

  <h3>Current reservations</h3>
  <div class="card-reservation">
    <% @my_reservations.each do |stay| %>
      <div class="card-product-infos">
        <p>Place: <%= stay.castle[:name] %></p>
        <p>Length of stay: <%= stay.check_in.strftime('%d-%m-%Y') %> - <%= stay.check_out.strftime('%d-%m-%Y') %></p>
        <p>Total price: £<%= number_with_delimiter(stay.total_price) %></p>
      </div>
    <% end %>

  </div>
</div>
